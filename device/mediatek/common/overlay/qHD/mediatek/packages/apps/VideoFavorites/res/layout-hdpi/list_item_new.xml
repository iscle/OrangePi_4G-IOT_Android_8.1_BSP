<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/favorite_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_frame">
    <RelativeLayout
            android:background="@drawable/windows_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        <ImageView
            android:id="@+id/btn_new"
            android:contentDescription="@string/img_new_desc"
            android:src="@drawable/wd_add"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="42px"
            android:layout_marginBottom="30px"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
                android:id="@+id/caption"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_new"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:paddingStart="12px"
                android:textSize="18dp"
                android:textColor="#ffa800"
                android:lines="1"
                android:minHeight="40px"
                android:background="@drawable/windows_name_bg_am"/>
    </RelativeLayout>
</FrameLayout>

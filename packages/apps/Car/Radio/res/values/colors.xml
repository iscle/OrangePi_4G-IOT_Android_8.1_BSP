<resources>
    <!-- The main accent color of the radio app. -->
    <color name="car_radio_accent_color">#e91e63</color>  <!-- Pink 500 -->

    <!-- The default background color of the radio. -->
    <color name="car_radio_bg_color">#283593</color>    <!-- Indigo 800 -->

    <!-- Background colors for different AM frequencies. -->
    <color name="am_range_1_bg_color">#455a64</color>   <!-- Blue Grey 700 -->
    <color name="am_range_2_bg_color">#37474f</color>   <!-- Blue Grey 800 -->
    <color name="am_range_3_bg_color">#263238</color>   <!-- Blue Grey 900 -->

    <!-- Background colors for different FM frequencies. -->
    <color name="fm_range_1_bg_color">#283593</color>   <!-- Indigo 800 -->
    <color name="fm_range_2_bg_color">#2a56c6</color>   <!-- Blue 800 -->
    <color name="fm_range_3_bg_color">#00838f</color>   <!-- Cyan 800 -->

    <!-- The color of the radio control buttons. -->
    <color name="car_radio_control_button">@android:color/black</color>

    <!-- The ripple color for various radio buttons and cards. -->
    <color name="radio_ripple_background">@color/car_card_ripple_light_color_background_dark</color>

    <!-- The color of the radio control buttons when they are disabled. -->
    <color name="car_radio_control_button_disabled">@color/car_grey_400</color>

    <!-- The color of the FAB when it is diabled. -->
    <color name="car_radio_control_fab_button_disabled">@color/car_grey_400</color>

    <!-- The color of the scrim that overlays the background of the radio. -->
    <color name="car_radio_display_scrim">@android:color/transparent</color>

    <!-- The color of the metadata text for each preset item. -->
    <color name="radio_preset_item_text">@color/car_body1_dark</color>

    <!-- The color of the text that displays the current radio station in the preset list. -->
    <color name="radio_current_station_text">@color/car_radio_control_button</color>

    <!-- The text color of the buttons in the manual tuner. -->
    <color name="manual_tuner_button_text">#0B73B7</color>

    <!-- The text color displaying the currently entered channel in the manual tuner. -->
    <color name="manual_tuner_channel_text">@color/car_grey_800</color>

    <!-- The color of the icon within the manaul tuner's done button when it is disabled. -->
    <color name="manual_tuner_done_disabled">@color/car_grey_700</color>
</resources>

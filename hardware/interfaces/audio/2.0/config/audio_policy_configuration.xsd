            <xs:enumeration value="AUDIO_DEVICE_OUT_SPDIF"/>
            <xs:enumeration value="AUDIO_DEVICE_OUT_FM"/>
            <xs:enumeration value="AUDIO_DEVICE_OUT_AUX_LINE"/>
